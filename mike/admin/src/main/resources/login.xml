<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>


    <package name="user" namespace="/user" extends="default">

        <action name="home" class="loginAction" method="home">
            <result name="success">/system/main/main.jsp</result>
        </action>

        <action name="loginPage" class="loginAction" method="loginPage">
            <result name="success">/user/login.jsp</result>
        </action>

       <action name="login" class="loginAction" method="login">      
            <result name="login" type="redirect">/user/loginPage.action</result>
            <result name="admin" type="redirect">/user/home.action</result>
            <result name="success" type="redirect">/user/home.action</result>
       </action>
       <action name="check" class="loginAction" method="check" >
       		<result name="login">/user/loginPage.action</result>
       		<result name="success">/user/loginPage.action</result>
       </action>
       <action name="loginout" class="loginAction" method="loginout">
       		<result name="success" type="redirect">/user/loginPage.action</result>
       		<result name="input">/error.jsp</result> 
       </action>
    </package> 
</struts>